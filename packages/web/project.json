{
	"name": "@engine-targets-web",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/web/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nrwl/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/web",
				"main": "packages/web/src/index.ts",
				"tsConfig": "packages/web/tsconfig.lib.json",
				"assets": ["packages/web/*.md"]
			}
		},
		"publish": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node tools/scripts/publish.mjs @engine-targets-web {args.ver} {args.tag}"
			},
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/web/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "packages/web/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": []
}
